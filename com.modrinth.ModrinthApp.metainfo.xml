<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>com.modrinth.ModrinthApp</id>
  <launchable type="desktop-id">com.modrinth.ModrinthApp.desktop</launchable>
  <name>Modrinth App</name>
  <developer_name>Modrinth</developer_name>
  <summary>Modrinth's game launcher</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-only</project_license>
  <url type="homepage">https://modrinth.com</url>
  <url type="bugtracker">https://github.com/modrinth/theseus/issues</url>
  <url type="vcs-browser">https://github.com/modrinth/theseus</url>
  <url type="contribute">https://github.com/modrinth/theseus</url>
  <description>
    <p>A unique, open source launcher that allows you to play your favorite mods, and keep them up to date, all in one neat little package</p>
  </description>
  <screenshots>
    <screenshot type="default">
      <caption>The home screen of the app</caption>
      <image>https://cdn-raw.modrinth.com/app-landing/app-screenshot.png</image>
    </screenshot>
    <screenshot>
      <caption>The instance log view</caption>
      <image>https://cdn-raw.modrinth.com/app-landing/cobblemon-launcher.png</image>
    </screenshot>
